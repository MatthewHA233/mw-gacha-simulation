# CDN 配置
NEXT_PUBLIC_CDN_BASE_URL=

# 支付配置（从后台获取）
PAYMENT_APP_ID=你的应用ID
PAYMENT_APP_SECRET=你的应用密钥

# 支付回调地址（生产环境）
NEXT_PUBLIC_PAYMENT_NOTIFY_URL=https://mw.lingflow.cn/api/payment/notify

# 数据库配置（可选，用于存储订单）
# DATABASE_URL=mongodb://...
# 或使用 Vercel KV (Redis)
# KV_URL=redis://...

# Supabase 配置（供 Horizn 数据读取）
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Horizn 月度页面最大时间点数（默认 200，过大可能导致 Supabase RPC 超时）
NEXT_PUBLIC_HORIZN_MAX_SESSIONS=200
